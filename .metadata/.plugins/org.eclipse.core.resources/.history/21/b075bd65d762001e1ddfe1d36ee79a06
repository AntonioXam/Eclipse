
public class ejemplo2 {

	public static void main(String[] args) {
		 int numero = 15;

		 System.out.println("es es el resultado");

	        if (numero % 2 == 0) 
	            System.out.println("El número es par.");
	         else 
	            System.out.println("El número es impar.");
	        
	        System.out.println("es es el resultado");

	}

}
