package Repaso;

import java.util.Scanner;

public class Enterotes3 {

	public static void main(String[] args) {
		
		Entero num= new Entero();
		
		Scanner sc = new Scanner(System.in);
		try {
			 System.out.print("Dime un valor entero: ");
			 num.setNumero(sc.nextInt());
			
			 System.out.println(num.getNumero());
			
			
			
			
		} catch (Exception e) {
			System.out.println("ERROR!. Has introducido un valor no v√°lido.");
		}
	   
	     sc.close();
	     
	     if (num.escero());
	     	System.out.println("Valor introducido: "+num.getNumero());
	    
	     		
	     	System.out.println("Valor introducido: "+num.getNumero()+" (cero)");
		
	     

	}

}
