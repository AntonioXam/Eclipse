package Cifrado;

import java.util.Scanner;

public class Cifradotest {

	public static void main(String[] args) {

		
		Scanner sc = new Scanner(System.in);
		try {


		System.out.print(" Texto a descifrar: ");
		String desc=sc.nextLine().trim();
		
		Descifrar d=new Descifrar(desc);
		
		System.out.println("Texto descifrado: "+d.DescifrarSustitucion(3));
		



		} catch (Exception e) {
			System.out.println("ERROR!. Has introducido un valor no v√°lido.");
		}

		sc.close();
	}



}
