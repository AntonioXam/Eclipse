package ejercicios1;

public class Ejercicio17 {

	
	    public static void main(String[] args) {
	        int numfilas = 4; 

	        for (int i = 0; i < numfilas; i++) {
	        	System.out.print(" ");
	            
	            }

	            
	            for (int j = 0; j < 2 * i + 1; j++) {
	                System.out.print("*");
	            }

	            // Ir a la siguiente línea después de imprimir cada fila
	            System.out.println();
	        }
	    }
	}
	



