
public class ejemplo2 {

	public static void main(String[] args) {
		 int numero = 0;

	        // Usamos la estructura if para verificar si el número es par o impar
	        if (numero % 2 == 0) 
	            System.out.println("El número es par.");
	         else 
	            System.out.println("El número es impar.");
	        
	            System.out.println("El numero me la come");

	}

}
